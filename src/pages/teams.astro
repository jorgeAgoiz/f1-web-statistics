---
import Header from "../components/common/Header.astro";
import Footer from "../components/common/Footer.astro";
import Layout from "../layouts/Layout.astro";
import TeamCard from "../components/TeamCard.astro";
import type { Team } from "../types/team";
import { getTeams } from "../utils/services";

const teams: Array<Team> = await getTeams();
---

<Layout title="Bienvenido a la pÃ¡gina de estadisticas de Formula 1">
  <Header textTitle="Equipos" />
  <main>
    {teams.length > 0 && teams.map((team: Team) => <TeamCard team={team} />)}
  </main>
  <Footer />
</Layout>

<style lang="css">
  main {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 1.6rem;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: auto;
    margin-top: 2rem;
    margin-bottom: 5rem;
  }
</style>
