---
import Header from "../components/common/Header.astro";
import Footer from "../components/common/Footer.astro";
import Layout from "../layouts/Layout.astro";
import DriversTable from "../components/DriversTable.astro";

export interface Driver {
  id: number;
  name: string;
  dorsal_number: number;
  birthday: string;
  country: string;
  picture: string;
}

const response: Response = await fetch("http://localhost:3012/drivers", {
  method: "GET",
  headers: {
    "Content-Type": "application/json",
    "api-key": import.meta.env.BACKEND_API_KEY,
  },
});
const drivers: Array<Driver> = await response.json();
---

<Layout title="Bienvenido a la pÃ¡gina de estadisticas de Formula 1">
  <Header textTitle="Pilotos" />
  <main>
    <DriversTable drivers={drivers} />
  </main>
  <Footer />
</Layout>

<style lang="css">
  main {
    width: 100%;
    height: auto;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 2rem;
    margin-bottom: 5rem;
    box-sizing: border-box;
    padding: 2rem;
  }
</style>
