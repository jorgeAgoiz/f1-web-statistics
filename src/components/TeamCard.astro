---
const { team } = Astro.props
console.log(team)
---

<div class="team-card">
    <h1>{team.name}</h1>
    <h3>{team.country}</h3>
    <img src={team.url_logo} width="155px" height="110px" />
</div>

<style lang="css">
    .team-card {
        border: 2px solid var(--color-jet);
        box-sizing: border-box;
        border-radius: 4px;
        background-color: var(--color-persian-green);
        width: 260px;
        height: 340px;
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
        align-items: center;
        transition: all .4s ease-in-out;
    }
    .team-card:hover {
        background-color: var(--color-middle-blue-green);
        border: 4px solid black;
    }
    .team-card:hover img {
        transform: scale(1.4);    
        border-color: var(--color-eerie-black);
    }

    .team-card h1 {
        font-size: 2rem;
        font-family: 'Orbitron';
    }
    .team-card h3 {
        font-size: 1.7rem;
        font-family: 'Anaheim';
        letter-spacing: 1px;
    }

    .team-card img {
        background-color: var(--color-snow);
        border: 4px solid var(--color-snow);
        border-radius: 4px;
        transition: all .6s ease-in-out;
    }
</style>