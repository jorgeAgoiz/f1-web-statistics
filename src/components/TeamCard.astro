---
const { team } = Astro.props
---

<div class="team-card">
    <h1>{team.name}</h1>
    <h3>{team.country}</h3>
    <img src={team.url_logo} width="145px" height="110px" />
</div>

<style lang="css">
    .team-card {
        border: 2px solid black;
        border-radius: 4px;
        background-color: var(--color-persian-green);
        width: 280px;
        height: 380px;
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
        align-items: center;
    }

    .team-card h1 {
        font-size: 2.2rem;
        font-family: 'Orbitron';
    }
    .team-card h3 {
        font-size: 1.8rem;
        font-family: 'Anaheim';
        letter-spacing: 1px;
    }

    .team-card img {
        background-color: var(--color-snow);
        border: 4px solid var(--color-snow);
        border-radius: 4px;
    }
</style>