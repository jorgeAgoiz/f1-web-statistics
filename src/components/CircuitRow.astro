---
import { Icon } from "astro-icon";
import type { Circuit } from "../pages/circuits.astro";

interface Props {
  circuit: Circuit;
}

const { circuit } = Astro.props as Props;
---

<tr>
  <td>
    {circuit.gp_name}
  </td>
  <td>
    {circuit.circuit_name}
  </td>
  <td>
    {circuit.country}
  </td>
  <td>
    <a class="button-stats" href="#" title="Estadísticas">
      <Icon name="stats" width="30px" height="30px" />
      Ver Estadísticas
    </a>
  </td>
</tr>

<style>
  .button-stats {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.4rem;
    color: black;
    text-decoration: none;
    transition: all 0.4s ease-in-out;
  }
  .button-stats:hover {
    transform: scale(1.2);
    font-weight: bold;
  }
  tr {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    gap: 0.5rem;
    width: 100%;
    border-bottom: 1px solid black;
    padding-top: 0.4rem;
    padding-bottom: 0.4rem;
    background-color: var(--color-snow);
  }
  td {
    min-width: 250px;
    font-size: 1rem;
    text-align: start;
    margin-left: 6px;
  }
  td:last-child {
    text-align: center;
    margin-left: 0px;
  }
</style>
