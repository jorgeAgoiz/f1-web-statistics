---
import NavBar from "./NavBar.astro";

interface Props {
  textTitle: string;
}

const { textTitle } = Astro.props as Props;
---

<header>
  <h1 class="main-title">{textTitle}</h1>
  <NavBar />
</header>

<style lang="css">
  header {
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    justify-content: start;
    align-items: center;
  }
  .main-title {
    font-size: 4rem;
    font-weight: 800;
    text-align: center;
    padding: 0.4rem;
    color: var(--color-eerie-black);
    font-family: "Airstrike Bold";
    width: 90%;
    animation: animate 2s ease-in-out;
  }

  @media (max-width: 600px) {
    .main-title {
      font-size: 3rem;
    }
  }
  @media (max-width: 400px) {
    .main-title {
      font-size: 2.4rem;
    }
  }

  @keyframes animate {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

</style>
