---
interface Props {
  text: string;
  url: string;
}
const { text, url } = Astro.props as Props;
---

<script is:inline type="module" define:vars={{ url }}>
  const button = document.querySelector("button.button-basic");
  button.addEventListener("click", () => window.location.replace(url));
</script>

<button class="button-basic">
  <span class="text">{text}</span>
</button>

<style>
  .button-basic {
    appearance: none;
    background-color: var(--color-jet);
    border-width: 0;
    box-sizing: border-box;
    color: var(--color-snow);
    cursor: pointer;
    display: inline-block;
    font-family: "Anaheim", Helvetica, Arial, sans-serif;
    font-size: 14px;
    font-weight: 600;
    letter-spacing: 1px;
    line-height: 1em;
    margin: 0;
    opacity: 1;
    outline: 0;
    padding: 1.5em 2.2em;
    position: relative;
    text-align: center;
    text-decoration: none;
    text-rendering: geometricprecision;
    text-transform: uppercase;
    transition: opacity 300ms cubic-bezier(0.694, 0, 0.335, 1),
      background-color 100ms cubic-bezier(0.694, 0, 0.335, 1),
      color 100ms cubic-bezier(0.694, 0, 0.335, 1);
    user-select: none;
    -webkit-user-select: none;
    touch-action: manipulation;
    vertical-align: baseline;
    white-space: nowrap;
    height: 50px;
  }

  .button-basic:before {
    animation: opacityFallbackOut 0.5s step-end forwards;
    backface-visibility: hidden;
    background-color: var(--color-persian-green);
    clip-path: polygon(-1% 0, 0 0, -25% 100%, -1% 100%);
    content: "";
    height: 100%;
    left: 0;
    position: absolute;
    top: 0;
    transform: translateZ(0);
    transition: clip-path 0.5s cubic-bezier(0.165, 0.84, 0.44, 1),
      -webkit-clip-path 0.5s cubic-bezier(0.165, 0.84, 0.44, 1);
    width: 100%;
  }

  .button-basic:hover:before {
    animation: opacityFallbackIn 0s step-start forwards;
    clip-path: polygon(0 0, 101% 0, 101% 101%, 0 101%);
  }

  .button-basic:after {
    background-color: var(--color-snow);
  }

  .button-basic span {
    z-index: 1;
    position: relative;
  }
</style>
